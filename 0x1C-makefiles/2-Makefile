# -*- 2-Makefile -*-
CC := gcc
NAME := school
SRC := main.c school.c
OBJ := $(SRC:%.c=%.o)

all: ${OBJ}
	${CC} ${OBJ} -o ${NAME}

main.o : $(findstring main.c, $(SRC))
	${CC} -c -o main.o $(findstring main.c, $(SRC))

school.o : $(findstring school.c, $(SRC))
	${CC} -c -o school.o $(findstring school.c, $(SRC))
